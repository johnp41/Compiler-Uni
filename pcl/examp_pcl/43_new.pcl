program hi ;

var a : ^integer;
var b : array of char ;
var c :  array [2] of char ;
var ar2 : ^ array of char ;

begin

new a ;
a^ := 2 ;
writeInteger(a^);  

c[(a^ - 2 )] := 'c' ;
c[(a^ - 1)] := '\0' ;
writeString(c); 

new [2] ar2 ;
b := ar2^ ;
b[0] := 'a' ; 
b[1] := 'x' ; 
writeString(b)  
(*
